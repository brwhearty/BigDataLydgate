<h1>Listing citations</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Pub info</th>
      <th>Classification</th>
      <th>Line numbers quoted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citations.each do |citation| %>
      <tr>
        <td><%= citation.author %></td>
        <td><%= citation.title %></td>
        <td><%= citation.pub_info %></td>
        <td><%= citation.classification %></td>
        <td><%= citation.line_numbers_quoted %></td>
        <td><%= link_to 'Show', citation %></td>
        <td><%= link_to 'Edit', edit_citation_path(citation) %></td>
        <td><%= link_to 'Destroy', citation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Citation', new_citation_path %>
